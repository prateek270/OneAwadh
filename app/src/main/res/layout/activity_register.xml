<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/login_bg"
    tools:context="com.oneawadhcenter.halwits.register">
<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >

    <ImageView
        android:layout_width="185dp"
        android:layout_height="89dp"
        android:id="@+id/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/oac_logo_white"

        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:id="@+id/nameView"
        android:layout_below="@+id/logo"
        android:layout_marginTop="20dp"
        android:clickable="false"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/nameet"

        android:textColor="#ffffff"
        android:layout_below="@+id/nameView"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailet"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/ee" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:id="@+id/ee"
        android:layout_below="@+id/nameet"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MOBILE NUMBER"
        android:id="@+id/textView6"

        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:textSize="12dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/emailet"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/mobileet"
        android:layout_below="@+id/textView6"
        android:textColor="#ffffff"
        android:layout_alignParentLeft="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/rr"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/mobileet"
        android:layout_marginTop="5dp"
        android:layout_alignParentLeft="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE OF BIRTH"
            android:id="@+id/textView7"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:layout_marginLeft="90dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_toRightOf="@id/textView7"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rrr"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rr"

        >


        <EditText
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dobet"
            android:textColor="#ffffff"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="2dp" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/small_calendar"
            android:id="@+id/cal"

            android:layout_marginLeft="5dp" />


        <Spinner
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:id="@+id/spinner"
            android:layout_weight="1"
            android:spinnerMode="dropdown"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PASSWORD"
        android:id="@+id/textView9"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_below="@+id/rrr"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passet"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView9"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CONFIRM PASSWORD"
        android:id="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_below="@+id/passet"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/conpasset"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView10"
        android:textColor="#ffffff" />

    <Button

        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="REGISTER NOW"
        android:layout_gravity="center_horizontal"
        android:background="#F71728"
        style="@style/ButtonText"
        android:id="@+id/update"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/conpasset"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?Sign In"
        android:id="@+id/oldaccount"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_centerInParent="true"
        android:layout_below="@+id/update"
        android:clickable="true"
        android:padding="7dp"/>



</RelativeLayout>
</ScrollView>