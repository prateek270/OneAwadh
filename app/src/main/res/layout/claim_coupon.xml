<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.oneawadhcenter.halwits.Claim_coupon"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="#3F51B5"
        android:weightSum="1"
        android:id="@+id/linearLayout">

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="40dp"
            android:id="@+id/backButton"
            android:layout_gravity="center_vertical"
            android:background="@android:color/transparent"
            android:layout_marginLeft="10dp"
            android:src="@drawable/right"

            android:scaleType="fitCenter"


            android:clickable="true" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/coupon_icon_w"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="Coupon"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"
            android:textColor="#ffffff"
            android:layout_weight="0.09" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/coupon_background"
        android:layout_below="@+id/linearLayout"

        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Your Coupon is Redeemed"
            android:id="@+id/cc1"
            android:textAlignment="center"
            android:textSize="15dp"
            android:layout_gravity="center_vertical"
            android:background="#ffffff"
            android:textColor="#000000"
            android:paddingTop="2dp"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congratulations!!"
            android:id="@+id/textView3"
            android:textSize="30dp"
            android:textColor="#000000"
            android:layout_centerInParent="true"

            android:textAlignment="center"/>
        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cc"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textStyle="normal"
            android:layout_gravity="center_vertical"
            android:background="#ff0000"
            android:textColor="@color/white"
            android:padding="5dp"
            android:layout_below="@+id/cc1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coupon_cirle_2"
            android:layout_above="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your code is:"
            android:layout_below="@+id/cc1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:textColor="#000000"/>


    </RelativeLayout>






</RelativeLayout>
